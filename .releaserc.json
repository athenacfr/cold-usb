{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "mkosi/build/cold_usb_*.img",
            "label": "Cold USB Disk Image"
          },
          {
            "path": "mkosi/build/cold_usb_*.SHA256SUMS",
            "label": "SHA256 Checksums"
          }
        ]
      }
    ]
  ]
}
