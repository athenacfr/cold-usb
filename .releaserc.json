{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build/cold_usb_*.img", "label": "Cold USB Image" },
          { "path": "build/cold_usb_*.SHA256SUMS", "label": "SHA256 Checksums" }
        ]
      }
    ]
  ]
}
