[Distribution]
distribution = debian
release = bookworm
arch = amd64

[Image]
type = iso
bootloader = grub

[Packaging]
# copy binary into the root filesystem
copy-from = ./app/src_tauri/app:/app/bin

# do NOT include network packages
packages = grub, linux-image-amd64

[Init]
# run binary directly on boot
init = /bin

# disable auto-install of extra tools
disable-cache = true
