{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cold Drive Wallet",
  "version": "0.1.0",
  "identifier": "com.colddrive.wallet",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cold Drive Wallet",
        "maximized": true,
        "alwaysOnTop": true,
        "resizable": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  }
}
